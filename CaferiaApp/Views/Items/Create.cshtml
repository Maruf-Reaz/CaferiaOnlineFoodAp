@model CaferiaApp.Models.ViewModels.ItemViewModel

@{
    ViewData["Title"] = "Create Item";
}

@section Css {
    <link asp-append-version="true" type="text/css" rel="stylesheet" href="~/vendor/select2/select2.min.css" />
}

@section Sole {
    <style>
        .select2-container .select2-selection {
            padding: 7px 12px 4px;
            height: 40px;
            font-size: .9125rem;
            background: #fff url('data:image/png;base64,') no-repeat right 0px center;
        }
    </style>
}

<div class="container-fluid mt-4">
    <div class="card mb-4 animated fadeIn">
        <div class="card-header p-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0 skewed skewed-yellow text-dark d-inline-block text-uppercase ls-1">Create Item</h3>
                </div>
                <div class="col text-right">
                    <a asp-action="Index" class="btn btn-back">Back</a>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <form id="create-form" asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Item Catagory</label>
                            <select asp-for="ItemCatagoryId" class="form-control" data-toggle="select" asp-items="@ViewBag.ItemCatagoryId"></select>
                            <span asp-validation-for="ItemCatagoryId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 priceDiv">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Price</label>
                            <input id="singlePrice" asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Descripton</label>
                            <textarea asp-for="Descripton" rows="3" class="form-control"></textarea>
                            <span asp-validation-for="Descripton" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Featured</label>


                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <input asp-for="IsFeatured" class="form-control" />
                            <span asp-validation-for="IsFeatured" class="text-danger"></span>
                        </div>
                    </div>

                  <div class="col-md-2">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">In Stock</label>


                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <input asp-for="IsInStock" class="form-control" />
                            <span asp-validation-for="IsInStock" class="text-danger"></span>
                        </div>
                    </div>

                 
                  


                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-control-label text-dark ls-1 text-uppercase">Image</label>
                            <input asp-for="Photo" class="form-control" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                    </div>
                   

                    <div class="col-lg-12">
                        <div class="form-group mb-0">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
