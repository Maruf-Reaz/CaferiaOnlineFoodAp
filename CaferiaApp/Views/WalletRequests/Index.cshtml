@model IEnumerable<CaferiaApp.Models.WalletRequest>

@{
    ViewData["Title"] = "Wallet Requests";
}

@section Css {
    @{await Html.RenderPartialAsync("_DataTableCssPartial");}
}

@section Sole {
    <style>


        .table tr th:last-child {
            width: 50px;
        }

        .table tr th {
            text-align: center;
        }

        .table tr td {
            text-align: center;
        }
    </style>
}

<div class="container-fluid mt-4">
    <div class="card animated fadeIn overflow-hidden">
        <div class="card-header p-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0 skewed skewed-yellow text-dark d-inline-block text-uppercase ls-1">Wallet Requests</h3>
                </div>
                
            </div>
        </div>
        <div class="card-body px-0 pb-2">
            <div class="table-responsive">

                <table class="table align-items-center  table-striped table-bordered" id="datatable-basic">
                    <thead class="thead-light">
                        <tr>

                            <th>
                                S/L
                            </th>
                            <th>
                                User Name
                            </th>
                            <th>
                                Phone
                            </th>

                             <th>
                                Request Amount
                            </th>

                            <th>
                                Approved Amount
                            </th>

                              <th>
                                Transaction Number
                            </th>

                             <th>
                                Remarks
                            </th>


                            <th class="text-center">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 0;
                        }

                        @foreach (var item in Model)
                        {
                            i++;
                            <tr>

                                <td>
                                    @i
                                </td>
                                <td>
                                    @item.ApplicationUser.UserName
                                </td>
                                <td>
                                    @item.Phone
                                </td>

                                <td>
                                    @item.RequestAmount
                                </td>
                                 <td>
                                    @item.ApprovedAmount
                                </td>
                                 <td>
                                    @item.TransactionId
                                </td>

                                <td>
                                    @item.Remarks
                                </td>



                                <td class="text-center">
                                    <div class="btn-group">
                                        @if (item.Status == 0)
                                        {
                                            <a class="btn btn-greenyellow btn-sm" asp-action="Edit" asp-route-id="@item.Id">Approve</a>
                                        }
                                        else if (item.Status == 1)
                                        {
                                            <a class="btn btn-success btn-sm">Approved</a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-danger btn-sm">Declined</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>



            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script asp-append-version="true" type="text/javascript" src="~/vendor/datatable/js/jquery.dataTables.min.js"></script>
    <script asp-append-version="true" type="text/javascript" src="~/vendor/datatable/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">

    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
